{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ], //添加  输出到控制台和文件日志
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.AspNetCore.Hosting": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "rT7w!z%C*F-JaNdRgUkXp2s5v8y/B?E(",//至少32个字符
    "Issuer": "myapp.com",
    "Audience": "myapp-users",
    "ExpireMinutes": 60
  },
  //mysql

  "FrontAddress": "http://localhost:3000", //前端地址-->解决跨域
  "ConnectionStrings": {
    "BlogDbContext": "server=127.0.0.1;port=3306;uid=root;pwd=123456;database=zblog"
  }
}
