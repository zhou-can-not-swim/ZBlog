<Page x:Class="Client.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Page.Resources>
        <!-- 步骤2：定义Button的自定义样式 -->
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <!-- 1. 设置基础属性（样式层） -->
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="30"/>

            <!-- 2. 重写控件模板（核心，重塑视觉结构） -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- 控件的视觉容器（这里用Border做按钮背景） -->
                        <Border x:Name="border" 
                                CornerRadius="8"
                                Background="#2C7DFA"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>

                        <!-- 3. 定义控件状态（鼠标悬浮、点击、禁用等） -->
                        <ControlTemplate.Triggers>
                            <!-- 鼠标悬浮状态 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E67E3"/>
                                <Setter TargetName="border" Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <!-- 点击状态 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1550B8"/>
                            </Trigger>
                            <!-- 禁用状态 -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- 步骤3：使用自定义样式的按钮 -->
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="自定义样式按钮" Style="{StaticResource CustomButtonStyle}"/>
    </Grid>
</Page>
