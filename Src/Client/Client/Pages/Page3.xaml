<Page x:Class="Client.Pages.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="按 Ctrl+Alt+X 打开此窗口" FontSize="16"/>

        <TextBlock Text="按下快捷键组合（例如 Ctrl+Alt+X）"/>
        <TextBlock Text="{Binding HotkeyDisplay}"/>
        <TextBox x:Name="HotkeyTextBox" IsReadOnly="True" Margin="0,10"/>
        <Button Content="保存" Click="Save_Click" HorizontalAlignment="Right"/>
    </StackPanel>
</Page>
